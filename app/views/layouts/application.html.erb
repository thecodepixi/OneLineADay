<!DOCTYPE html>
<html>
  <head>
    <title>OneLineADay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-light bg-light">
      <h1 class="navbar-brand">One Line A Day Journal</h1><small>and a photo...and a mood...</small>
      <%= form_with(url: '/logout', method: 'post') do %><%= submit_tag "Log Out", class: "btn btn-light"%><% end %>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
