<%= render 'flash' %>
<h1><%= @journal.title %></h1>
<h2><em><%= @journal.mantra %></em></h2>
<%= link_to "Edit This Journal", edit_user_journal_path(@user, @journal) %>
<%= link_to "Delete This Journal", user_journal_path(@user, @journal), method: 'delete' %>
<ul>
<% @journal.days.each do |day| %>
  <%= link_to day.title_date, day %>
<% end %>
</ul>