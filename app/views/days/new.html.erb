<%= render 'errors' %>

<%= form_for [@journal, @day] do |f| %>
  <%= f.label :description, "Describe Your Day: (150 characters max)" %>
  <%= f.text_field :description %><br>
  <%= f.label :mood_id, "Choose Your Mood:" %>
  <%= f.collection_select :mood_id, Mood.all, :id, :mood_type %><br>
  <%= f.hidden_field :journal_id, value: @journal.id %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit "Create Daily Update" %>
<% end %>