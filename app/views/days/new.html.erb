<% if @day.errors.any? %>
  <div class="alert alert-danger" role="alert">
  <h4 class="alert-heading">Sorry, there was an error with your days details...</h4>
  <% @day.errors.full_messages.each do |msg| %>
    <li><%= msg %>
  <% end %>
  </div>
<% end  %>

<%= form_with model: [ @journal, @day ] do |f| %>
  <%= f.label "Describe Your Day:" %>
  <%= f.text_field :content %>
  <%= f.label "Choose Your Mood:" %>
  <%= f.label :mood_id %>
  <%= f.collection_select :mood_id, Mood.all, :id, :mood_type %>
  <%= f.hidden_field :journal_id, value: @journal.id %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.submit "Update Your Day" %>
<% end %>