<%= render 'errors' %>
<div class="container">
<h3>How Was Your Day?</h3>
<%= form_for @day do |f| %>
<div class='form-group'>
  <%= f.label :description, "Describe Your Day: (150 characters max)" %><br>
  <%= f.text_area :description %>
</div>
<div class='form-group'>
  <%= f.label :mood_id, "Choose Your Mood:" %>
  <%= f.collection_select :mood_id, Mood.all, :id, :mood_type, include_blank: '' %>
</div>
<div class='form-group'>
  <%= f.fields_for :mood do |m| %><br>
    <%= m.label :mood_type, "Create New Mood:"%>
    <%= m.text_field :mood_type %>
  <% end %><br>
</div>
  <%= f.hidden_field :journal_id, value: @day.journal_id %>
  <%= f.hidden_field :user_id, value: @day.user_id %>
  <%= f.submit "Edit Your Day", class: 'btn btn-info' %>
<% end %>
</div>