<%= render 'flash' %>
<div class='container-fluid'>
<div class="row">
<div class="col-sm"></div>
<div class="col-sm text-center">
<br>
<%= form_with(url: "/login", method: "post") do %>
  <div class="form-group">
    <%= label_tag :username, "Username:" %>
    <%= text_field_tag :username %>
  </div>
  <div class="form-group">
    <%= label_tag "Password:" %>
    <%= password_field_tag :password %>
  </div>
    <%= submit_tag "Log In", class: 'btn btn-info'%>
<% end %><br>
  <p> <%= link_to "Create An Account", new_user_path, class: 'btn btn-info' %>
  <p><%= link_to 'Sign in with GitHub', '/auth/github', method: :post, class: 'btn btn-dark' %></p>
  <p><%= link_to 'Sign in with Facebook', '/auth/facebook', method: :post, class: 'btn btn-primary' %></p>
  <p><small>To experience a demo of this app, login using username 'DemoUser' and Password 'password'...</small><p>
</div>
<div class="col-sm"></div>
</div>
</div>

 



