<div class ="container">
  <%= form_for @user do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :username %>
      <%= f.text_field :username %><br>
    </div>
    <div class='form-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='form-group'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
      <%= f.submit "Submit", class:"btn btn-info"%>
  <% end %>
</div>