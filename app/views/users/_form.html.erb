<div class ="container">
  <%= form_for @user do |f| %>
    <div class='form-group'>
      <%= f.label :name, class: 'h4' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :username, class: 'h4' %>
      <%= f.text_field :username, class: 'form-control' %><br>
    </div>
    <div class='form-group'>
      <%= f.label :password, class: 'h4' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :password_confirmation, class: 'h4' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
      <%= f.submit "Submit", class:"btn btn-info btn-lg"%>
  <% end %>
</div>