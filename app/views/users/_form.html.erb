<%= form_for @user do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
  </div>
  <div class='form-group'>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
    <%= f.submit "Create Account", class:"btn btn-primary"%>
<% end %>